                                <TextBlock x:ConnectionId='25' Name="HeaderAwayteamGoals3" RelativePanel.RightOf="HeaderSlashGoals3" TextAlignment="Left" Margin="20,0,0,0" />
                            </RelativePanel>
                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='7' Name="MatchButton4" 
                                                        
                            Height="70" 
                            Width="400" 
                            Opacity="100" 
                            Background="LawnGreen"
                            Margin="0,0,0,5">
                        <StackPanel>
                            <TextBlock x:ConnectionId='11' Name="MatchDate4" FontSize="12" HorizontalAlignment="Center" />
                            <TextBlock x:ConnectionId='12' Name="MatchId4" Visibility="Collapsed" />
                            <RelativePanel x:ConnectionId='13' Name="Team4relative" HorizontalAlignment="Center" >
                                <TextBlock x:ConnectionId='17' Name="HeaderHometeam4" RelativePanel.LeftOf="HeaderSlash4" FontWeight="Bold" />
