                            </RelativePanel>
                            <RelativePanel HorizontalAlignment="Center">
                                <TextBlock x:ConnectionId='14' Name="HeaderHomeGoals4" RelativePanel.LeftOf="HeaderSlashGoals4" />
                                <TextBlock x:ConnectionId='15' Name="HeaderSlashGoals4" Text=" - " RelativePanel.AlignHorizontalCenterWithPanel="True" />
                                <TextBlock x:ConnectionId='16' Name="HeaderAwayteamGoals4" RelativePanel.RightOf="HeaderSlashGoals4" TextAlignment="Left" Margin="20,0,0,0" />
                            </RelativePanel>
                        </StackPanel>
                    </Button>
                    <RelativePanel HorizontalAlignment="Left" Width="440">
                        <Button x:ConnectionId='9' Name="PreviousMatches" 
                                                                
                                Height="50" 
                                Width="195" 
                                Opacity="100" 
                                Background="LawnGreen"
                                Margin="0,0,10,0" 
                                Content="Taaksepäin"
                                ToolTipService.ToolTip="Selataan otteluita taaksepäin.">
                        </Button>
                        <Button x:ConnectionId='10' Name="NextMatches" 
                                                               
                                Height="50" 
                                Width="195" 
                                Opacity="50" 
                                Background="LawnGreen"
                                Margin="0,0,0,0" 
                                Content="Eteenpäin" 
                                RelativePanel.RightOf="PreviousMatches"
                                ToolTipService.ToolTip="Selataan otteluita eteenpäin.">
                        </Button>
                    </RelativePanel>
                    <TextBlock x:ConnectionId='8' Name="InfoText" Height="40" FontSize="14" />
                </StackPanel>
            </Frame>
        </StackPanel>
    </StackPanel>
</Page>

